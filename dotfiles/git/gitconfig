[alias]
    co = checkout
    cm = commit
    br = branch
    last = log -1 HEAD
    unstash = stash pop
    stashes = stash list
    discard = checkout --
    unstage = reset HEAD --
    supdate = submodule update --remote --merge
    spush = push --recursive-submodules=on-demand
    track = log --follow -p

[core]
    editor = nvim
    excludesfile = /home/fed/.gitignore_global
    pager = delta --syntax-theme="Nord" --diff-so-fancy

[delta]
    navigate = true
    line-numbers = true

[diff]
    colorMoved = default

[init]
    defaultBranch = "main"

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictStyle = diff3

[push]
    default = simple

[user]
    name = Federico Menozzi
    email = federicogmenozzi@gmail.com
